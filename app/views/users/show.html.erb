<div class="user_profile">

  <div class="col-lg-5">
    
    <div class="my-info">
      
     
      <div class="my-profile">
      
      <h2>基本プロフィール</h2>

      <div class="pic-name">
        <div class="image" style="background-image: url(<%= @user.avatar.url(:medium) %>);"></div>
        <h3 class="name"><%= @user.nickname %></h3>
      </div>

      <div class="add-info">
        <h3 class="add">所属：<%= @user.belonging %></h3>
        <h3 class="add">誕生日：<%= @user.birthday %></h3>
        <h3 class="add">Facebook：<%= @user.facebookid %></h3>
        <h3 class="add">Twitter：<%= @user.twitterid %></h3>
      </div>


      </div>
      
      <div class="my-intro">
      <h2>自己紹介</h2>
        <div class="intro-contents">
        <h3><%= @user.introduction %></h3>
        </div>
      </div>

      <% if current_user.id == @user.id %>
        <div class="profile_edit">
          <%= link_to "プロフィール編集", edit_user_path(current_user), {:class => "btn btn-primary withripple edit-profile-btn" }%>
        </div>
      <% end %>  
    
    </div>

  </div>
  
  <div class="col-lg-7">

    <div class="my-memo-space">
    <% if current_user.id == @user.id %>
      <h2>My Memo</h2>
    <% else %>
      <h2>Friend's Memo</h2>
    <% end %>
    <div class="memo-zone">
    <% @memos.each do |memo| %>
      <div class="my-memos-note" >
        <div class="col-lg-3">
        
        <a href="/memos/<%= memo.id %>/edit">
        <div class="note"> 
          <div class="note-title">
          <%= memo.title %>
          </div>
        </div>
        </a>
        </div>
      </div>
    <% end %>
    </div>

    <% if current_user.id == @user.id %>
      <div class="memo-create">
        <%= link_to( "新規作成", "/memos/new_create", {:method => ":post", :class => "btn btn-primary withripple memo-create-btn"}) %>
      </div>
    <% end %>  
    
    </div>
    
  </div>

</div>
